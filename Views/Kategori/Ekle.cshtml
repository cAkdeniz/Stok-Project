@using StokProject.Models.Entity
@model Kategoriler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" class="form-group">
    <div class="form-group">
        <label>Kategori Adı: </label>
        @Html.ValidationMessageFor(x=>x.Ad,"", new { @class = "text-danger", @style = "padding-left:10px" })
        @Html.TextBoxFor(x=>x.Ad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button class="btn btn-info">Ekle</button>
    </div>
</form>

