@using StokProject.Models.Entity
@model Kategoriler
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x=>x.Id)
        @Html.TextBoxFor(x=>x.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Ad)
        @Html.ValidationMessageFor(x => x.Ad, "", new { @class = "text-danger", @style = "padding-left:10px" })
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">Güncelle</button>
}

