@using StokProject.Models.Entity
@model Satislar 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Satış Yap
</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Yapma Ekranı</h2>
            </div>
            <form action="/Satis/SatisYap" method="post">
                <div class="modal-body">
                    <label>
                        Ürün Adı
                    </label>
                    @Html.TextBoxFor(x => x.UrunId, new { @class = "form-control" })<br />
                    <label>
                        Müşteri Adı Soyadı
                    </label>
                    @Html.TextBoxFor(x => x.MusteriId, new { @class = "form-control" })<br />
                    <label>
                        Adet
                    </label>
                    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
                    <br />
                    <label>
                        Fiyat
                    </label>
                    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })<br />
                    <br />
                    <button class="btn btn-primary">Satış İşlemini Yap</button>
                </div>
            </form>
        </div>
    </div>
</div>

