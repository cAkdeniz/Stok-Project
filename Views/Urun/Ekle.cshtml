@using StokProject.Models.Entity
@model Urunler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div class="form-group">
        <label>Ürün Adı: </label>
        @Html.ValidationMessageFor(x => x.Ad, "", new { @class = "text-danger", @style = "padding-top:10px" })
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ürün Markası: </label>
        @Html.ValidationMessageFor(x => x.Marka, "", new { @class = "text-danger", @style = "padding-top:10px" })
        @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Fiyat: </label>
        @Html.ValidationMessageFor(x => x.Fiyat, "", new { @class = "text-danger", @style = "padding-top:10px" })
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kategori: </label>  
        @Html.DropDownListFor(x=>x.KategoriId, (List<SelectListItem>)ViewBag.Kategoriler, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Stok: </label>
        @Html.ValidationMessageFor(x => x.Stok, "", new { @class = "text-danger", @style = "padding-top:10px" })
        @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button class="btn btn-info">Ekle</button>
    </div>
</form>
