@using StokProject.Models.Entity
@model Musteriler
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Musteri", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Ad)
        @Html.ValidationMessageFor(x=>x.Ad, "", new { @class = "text-danger", @style = "padding-top:10px" })
        @Html.TextBoxFor(x=>x.Ad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Soyad)
        @Html.ValidationMessageFor(x => x.Soyad, "", new { @class = "text-danger", @style = "padding-top:10px" })
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">Güncelle</button>
}

